@model IEnumerable<KidSteps.Models.User>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>

<table>
    <tr>
        <th>
        </th>
        <th>
            Name
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(_ => item.ProfilePicture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Add Kid", "CreateKid")
