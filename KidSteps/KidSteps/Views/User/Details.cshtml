@model KidSteps.Models.User

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>User</legend>

    <div class="display-label">Bio</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name.Full)
        <img src="@(string.IsNullOrEmpty(Model.ProfilePicture.Url) ? "" : Model.ProfilePicture.Url)" alt="Alternate Text" />
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
