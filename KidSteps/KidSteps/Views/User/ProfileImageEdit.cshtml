@model IEnumerable<KidSteps.Models.Image>
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <input type="hidden" name="userId" value="@User.Identity.Name" />
    foreach (var imageId in Model)
    {
        @Html.RadioButtonFor(_ => imageId, imageId.Id)
        @Html.DisplayFor(_ => imageId)
    }
    <input type="submit" value="Save" />
}
<div>
    @Html.ActionLink("Back to Profile", "Index")
</div>
