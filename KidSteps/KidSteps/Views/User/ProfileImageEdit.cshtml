@model KidSteps.Models.Image
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Profile Picture</legend>
        @Html.HiddenFor(model => model.Id)
        @if (Model != null) {
        <div class="display-field">
            <img src="@Model.Url" alt="Alternate Text" />
        </div>
        } else {
        <div class="display-field">
            <img src="/Images/profile-placeholder.jpg" alt="Alternate Text" height="100" />
        </div>
        }
        <p>
            @Html.TextBoxFor(model => model.File, new { type = "file", accept = "image/*" })
            @Html.ValidationMessageFor(model => model.File)
        </p>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to Profile", "Index")
</div>
