@model KidSteps.ViewModels.FamilyCreateViewModel
@{
    ViewBag.Title = "Create";
}
<h2>
    Create</h2>
<script src="@Links.Scripts.jquery_validate_min_js" type="text/javascript"></script>
<script src="@Links.Scripts.jquery_validate_unobtrusive_min_js" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Family</legend>
        <div>@Html.LabelFor(m => m.FamilyName)</div>
        <div>
            @Html.EditorFor(m => m.FamilyName)
        </div>
        <div>@Html.LabelFor(m => m.KidName)</div>
        <div>
            @Html.EditorFor(m => m.KidName)
        </div>
        <div>@Html.LabelFor(m => m.RelationshipOfOwnerToKid)
        </div>
        <div>
        @Html.DropDownListFor(m => m.RelationshipOfOwnerToKid, Model.RelationshipsToChooseFrom)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", MVC.Family.Index())
</div>
