@model KidSteps.Models.User

@if(Model != null) {
    <text>[ @Html.ActionLink(Model.Name.Full, MVC.User.Details().WithId(Model)) ]
    [ @Html.ActionLink("Log Off", MVC.Account.LogOff()) ]</text>
}
else {
    @:[ @Html.ActionLink("Register", MVC.Account.Register()) ]
    @:[ @Html.ActionLink("Log On", MVC.Account.LogOn()) ]
}
