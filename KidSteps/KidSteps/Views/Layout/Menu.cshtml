@model KidSteps.ViewModels.LayoutMenuViewModel
<nav>
    <ul id="menu">
        <li>@Html.ActionLink("Home", MVC.Home.Index())</li>
        @if (User.Identity.IsAuthenticated)
        {
            if (Model.Family != null && Model.CurrentUser.IsFamilyAdmin)
            {
                <li>@Html.ActionLink("Manage Family", MVC.Family.Manage().WithId(Model.Family))</li>
            }

            @*<li>@Html.ActionLink("My Pics", MVC.Image.Index().WithId(Model.CurrentUser))</li>*@
        }
    </ul>
</nav>